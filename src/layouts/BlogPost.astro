---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
const dateTimeFormat = Intl.DateTimeFormat();
const publishedDate = dateTimeFormat.format(pubDate);
const updatedAt = updatedDate ? dateTimeFormat.format(updatedDate) : null;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
				border-top: 1px solid #ddd;
				margin-block: 1rem;
			}
		</style>
	</head>

	<body>
		<Header />
		<main class="container">
			<article>
				{heroImage && <img width={720} height={360} src={heroImage} alt="" />}
				<h1 class="title">{title}</h1>
				{pubDate && <time datetime={publishedDate}>{publishedDate}</time>}
				{
					updatedAt && (
						<div>
							Last updated on <time>{updatedAt}</time>
						</div>
					)
				}
				<hr />
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
