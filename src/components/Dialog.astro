---
import type { HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"dialog"> {}

const props = Astro.props;
---

<dialog {...props}>
	<slot />
</dialog>

<style>
	html:has(dialog:modal) {
		overflow: hidden;
	}
	dialog::backdrop {
		position: fixed;
		inset: 0;
		background-color: rgba(0, 0, 0, 0.2);
		backdrop-filter: blur(2px);
		animation: none;
	}
</style>
