{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"topo": {
			"dependsOn": ["^topo"]
		},

		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"cache": false,
			"dependsOn": ["build"],
			"persistent": true
		},
		"typecheck": {
			"dependsOn": ["topo"]
		}
	}
}
